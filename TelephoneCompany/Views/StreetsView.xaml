<Window x:Class="TelephoneCompany.Views.StreetsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelephoneCompany.Views"
        xmlns:vm="clr-namespace:TelephoneCompany.ViewModels"
        mc:Ignorable="d"
        Title="Streets" Height="450" Width="800"
        MinWidth="500" MinHeight="400" WindowStyle="ThreeDBorderWindow">
    <Window.DataContext>
        <vm:StreetsViewModel/>
    </Window.DataContext>
    <Grid>
        <DataGrid ItemsSource="{Binding StreetItems}" Height="auto" Width="auto" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Street" Binding="{Binding Street}"/>
                <DataGridTextColumn Header="AbonentsAmount" Binding="{Binding AddressCount}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
